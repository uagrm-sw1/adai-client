<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".AreaListActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:id="@+id/areas_images_constraint_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center"
            android:columnCount="2"
            android:rowCount="2">

            <LinearLayout
                android:id="@+id/math_linear_layout"
                android:layout_width="140dp"
                android:layout_height="240dp"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/picture_math">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/seahorse"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/math"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/reading_linear_layout"
                android:layout_width="140dp"
                android:layout_height="240dp"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/picture_reading">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/snake"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reading"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/art_linear_layout"
                android:layout_width="140dp"
                android:layout_height="240dp"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/picture_art">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/octopus"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/art"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/writing_linear_layout"
                android:layout_width="140dp"
                android:layout_height="240dp"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/picture_writing">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/leopard"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/writing"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

            </LinearLayout>

        </GridLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>